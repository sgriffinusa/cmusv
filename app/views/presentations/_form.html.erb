<%= form_for(@presentation) do |f| %>
    <% if @presentation.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@presentation.errors.count, "error") %> prohibited this presentation from being saved:</h2>

          <ul>
            <% @presentation.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <table border="1" cellspacing="0" cellpadding="0" style="border-width: 1px;" class="cmu_table ">
      <tr class="cmu_table_odd">
        <td class="field_label" colspan="2">
          <%= f.label :course_id %>
          <br/>
          <%= f.select :course_id, @courses.collect{|c| [c.name, c.id]} %>
        </td>
      </tr>
      <tr class="cmu_table_even">
        <td class="field_label">
          <%= f.label :team_id %>
          <br/>
          <%= f.select :team_id, @teams.collect{|t| [t.name, t.id]}, { :include_blank => true } %>
        </td>
        <td class="field_label">
          <%= f.label :individual_user_id %>
          <br/>
          <%= f.select :individual_user_id, @people.collect{|p| [p.human_name, p.id]}, { :include_blank => true } %>
        </td>
      </tr>
      <tr class="cmu_table_even">
        <td class="field_label" colspan="2">
          <%= f.label :title %>
          <br/>
          <%= f.text_field :title %>
        </td>
      </tr>
      <tr class="cmu_table_odd">
        <td class="field_label" colspan="2">
          <%= f.label :comments %>
          <br/>
          <%= f.text_area :comments %>
        </td>
      </tr>
    </table>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
